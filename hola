Swal.fire({
    title: 'LOREMIPSUM',
    text: 'LOREMIPSUM.',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Si',
    cancelButtonText: 'No',
}).then((result) => {
    if (result.value) {
        Swal.fire({
            title: 'LOREMIPSUM',
            text: 'LOREMIPSUM',
            icon: 'success'
        }).then(function () {
            // Cambiamos de status
            window.location = `backend/api/solicitud_material/norsaplast/entregar_pedido.php?id=${id}`;
        });
    }
});